enum Permission {
  ADMIN
  USER
  ITEMCREATE
  ITEMUPDATE
  ITEMDELETE
  PERMISSIONUPDATE
}

type User {
  id: ID! @id
  name: String!
  email: String! @unique
  password: String!
  resetToken: String
  resetTokenExpiry: Float
  permissions: [Permission] @scalarList(strategy: RELATION)
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type Album {
  id: ID! @id
  title: String!
  description: String
  slug: String
  tags: [String] @scalarList(strategy: RELATION)
  owner: User
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}

type AlbumItem {
  id: ID! @id
  title: String
  description: String
  slug: String
  url: String!
  tags: [String] @scalarList(strategy: RELATION)
  owner: User
  createdAt: DateTime! @createdAt
  updatedAt: DateTime @updatedAt
}